#admin-bar
	position fixed
	height 30px
	width 100%
	min-width 600px
	background-color #111
	top 0
	left 0
	z-index 1000
	box-shadow 0px 1px 3px rgba(0,0,0,.5)
	opacity 0.7
	transition opacity 0.3s ease
	&:hover
		opacity 0.9

	ul
		margin 0px 0px 0px 0px
		padding 0px 0px 0px 0px
		list-style none

	li
		float left
		position relative
		margin 0px 0px 0px 0px
		padding 0px 0px 0px 0px
		list-style none
		display inline
		color white
		font-size 12px
		font-weight bold
		line-height 20px

		text-shadow 0px -1px 1px #000, 0px 1px 1px #222

	.nav-user
		float left
		li
			padding 5px 10px
		.nav-logout a
			text-decoration none
			font-weight normal
			font-size 11px
			color #888
			&:hover
				color #fff

	.nav-actions
		float right
		border-left 1px solid #222
		li
			border-left 1px solid #000
			border-right 1px solid #222
		a
			display block
			color #FFF
			font-size 11px
			font-weight bold
			line-height 20px
			padding 5px 10px
			text-decoration none
			&:hover
				background-color #1f1f1f

	.sub-nav
		display none
		position absolute
		top 100%
		right -1px
		float left
		background-color #111
		box-shadow 0px 1px 3px rgba(0,0,0,.5)
		/* TODO - Dynamic Width */
		width 120px
		border-top 1px solid #000

		li
			display block
			margin 0
			width 100%
			box-sizing border-box
			border-top 1px solid #222
			border-left 1px solid #000
			border-bottom 1px solid #000
			border-right 1px solid #222
			a
				padding 5px 10px
				line-height 16px

	li:hover .sub-nav
		display block






.editable-text-content
	position relative

/* Hover state */
.editable-text-content-item.active:after
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	content ""
	background-color lime
	z-index 100
	opacity 0.5