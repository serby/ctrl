/*
 * Main Variables
 */

/* Global Styles */

$primaryColor = #47a9a4

$baseBorderColor = #CCCCCC
$baseBorderRadius = 0px /* Set to 0 to disable border radius */

/* Global Typography */
$baseFontFamily = "Helvetica Neue", Helvetica, Arial, sans-serif
$baseFontColor = #666666
$baseFontSize = 13px
$baseLineHeight = 18px /* Used to calculate vertical rhythm */

/* Buttons and Links */
$buttonColor = #EEEEEE /* A neutral button color - highlights can be added with extra classes */

/* Forms */
$inputBackground = #FFFFFF
$labelFontColor = #333333
$inputFontColor = #333333

/* Animation and Transitions */
$baseTransitionDuration = 0.1s /* Set to 0s to disable transitions */
$baseTransitionEasing = ease

/* Notification Messages */
$notificationColor = #EEEEEE /* A neutral notification color to set default styles */
$successColor = #47a967
$noticeColor = #4791a9
$warningColor = #f0b034
$errorColor = #d24d4d

/***** UNSORTED *****/

/** General Colours **/
$primaryTextColor = #333333
$secondaryTextColor = #FFFFFF

$primaryBrandColor = #001e5a /* Brand Blue */
$secondaryBrandColor = #fff200 /* Brand Yellow */


/** Errors **/
$secondaryErrorColor = #FFC7C7

/** Progressive Enhancements **/
$lightTextShadow = 0px 1px 2px #FFF
$brandTextShadow = 0 1px 2px darken($primaryBrandColor, 40)
$lightBoxShadow = 0px 1px 2px 0px rgba(0,0,0,0.2)
$standardBoxShadow = 0px 1px 4px rgba(69, 85, 93, 0.4)

/*
 * Admin Variables
 */
/* Buttons */
$secndaryButtonColor = #CCCCCC
/* Tables */
$thColor = #DDD
/* Forms */
$labelHoverColor = #EEEEEE


