// Login Page
.login
  background-color #efefef
  margin 40px

.password-reset
  float right
  margin-top -44px


/* Code snippets */
pre
code
  font-family 'Menlo', 'Monaco', monospace
  color #444
  border 1px solid #ccc
  background-color #fff
  padding 20px
  display block


//-
//- Page Titles
//-

.page-header
  position relative
  margin-bottom 3em

  h1
    margin-bottom 0.2em

.page-actions
  position absolute
  top 0
  right 0

  li
    float left
    margin-left 10px








fieldset,
[class^="panel"]
  position relative
  margin-bottom 3em

  h3
    position relative
    text-transform uppercase
    border-bottom 3px solid #ccc
    padding-bottom 10px




/** TEMP table control styles **/
td
  vertical-align top
  a
    color $globalColor
    text-decoration none
    &:hover
      text-decoration underline
  .row-actions,
  .row-actions-block
    display inline
    margin-top 4px
    margin-left 20px
    padding 0
    font-size 12px
    opacity 0
    transition opacity 0.2s ease
    li
      margin 0 10px 0 0
      padding 0
      list-style none
      display inline
    .form-delete-button
      display inline
      .button-delete
        background-color transparent
        border 0
        color $colorPrimary
        box-shadow none
        text-shadow none
        font-weight normal
        padding 0
        &:hover
          color #222
          text-decoration underline

  .row-actions-block
    display block
    margin-left 0
tr:hover td
  .row-actions,
  .row-actions-block
    opacity 1
/* Fading Inline Row Controls */
td.title
  strong
    font-size 14px


