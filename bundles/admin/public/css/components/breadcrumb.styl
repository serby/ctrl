//
// BREADCRUMB
// ==========
// Uses pseudo elements to add separators between links
//

.breadcrumb
  margin-bottom 18px
  li
    display inline
    &:before
      content " / "
    &:first-child:before
      content ""
    &,
    a
      font-size 12px
      color #919191
    a
      text-decoration underline
      &:hover
        color $colorPrimary
