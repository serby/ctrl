//
// DIALOGS
// =======
//

.dialog-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(#000, 0.5)
  z-index 1

.dialog-confirm
  position fixed
  top 40%
  width 400px
  margin-left -200px
  left 50%
  background-color #fff
  border-radius 3px
  border 1px solid #777
  box-shadow 0px 0px 0px 3px rgba(#fff, 0.1)
  z-index 2

  p
    padding 30px 20px 12px

  .controls
    border-top 1px solid #ccc
    padding 10px 10px
    overflow hidden
    background-color #fafafa
    box-shadow 0px 3px 3px rgba(#000, 0.1)
    border-radius 0px 0px 3px 3px

    button
      float right
      margin-left 10px
      margin-bottom 0

.dialog-custom
  position fixed
  top 20%
  width 700px
  margin-left -350px
  left 50%
  background-color #fff
  border-radius 3px
  border 1px solid #777
  box-shadow 0px 0px 0px 3px rgba(#fff, 0.1)

  .custom-content
    max-height 300px
    overflow-y scroll

    .empty
      text-align center
      margin 25px 0

    .asset-list
      width 175px
      float left

  .asset-browser-item
    list-style none
    width 100%
    padding 10px
    float left
    clear both
    box-sizing border-box
    margin 0
    text-align center

    img
      max-width 100%
      border 3px solid #ddd
      cursor pointer

      &:hover
        border-color #bbb

      &.selected
        border-color $colorPrimary

  .controls
    border-top 1px solid #ccc
    padding 10px 10px
    overflow hidden
    background-color #fafafa
    box-shadow 0px 3px 3px rgba(#000, 0.1)
    border-radius 0px 0px 3px 3px
    clear left

    button
      float right
      margin-left 10px
