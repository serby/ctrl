.fancybox-wrap,
.fancybox-skin,
.fancybox-outer,
.fancybox-inner,
.fancybox-image,
.fancybox-wrap iframe,
.fancybox-wrap object,
.fancybox-nav,
.fancybox-nav span,
.fancybox-tmp
  padding 0
  margin 0
  border 0
  outline none
  vertical-align top

.fancybox-wrap
  position absolute
  top 0
  left 0
  z-index 8020

.fancybox-skin
  position relative
  background #fff
  text-shadow none
  border-radius 2px

.fancybox-opened
  z-index 8030

  .fancybox-skin
    box-shadow 0 5px 10px rgba(0, 0, 0, 0.5)

.fancybox-inner
  position relative
  overflow hidden

  .fancybox-type-iframe &
    -webkit-overflow-scrolling touch

.fancybox-outer
  position relative

.fancybox-error
  margin 0
  padding 15px
  white-space nowrap

.fancybox-image,
.fancybox-iframe
  display block
  width 100%
  height 100%

.fancybox-image
  max-width 100%
  max-height 100%

.fancybox-close,
.fancybox-prev span,
.fancybox-next span
  background-repeat no-repeat
  background-image versionPath('/admin/images/content/fancybox/fancybox-sprite.png')
  .svg &
    background-image versionPath('/admin/images/content/fancybox/fancybox-sprite.svg')

#fancybox-loading
  position fixed
  top 50%
  left 50%
  margin-top -22px
  margin-left -22px
  background-position -79px 0
  opacity 0.8
  cursor pointer
  z-index 8060
  background-color #000
  border-radius 2px

  div
    width 24px
    height 24px
    margin 10px
    background-position 50% 50%
    background-repeat no-repeat
    background versionPath('/admin/images/content/fancybox/fancybox-loading.gif')

.fancybox-close
  position absolute
  top -34px
  right 0
  width 36px
  height 36px
  cursor pointer
  z-index 8040
  background-color #fff
  background-position 10px 10px
  border-radius 2px 2px 0 0
  &:hover
    background-position 10px -18px

.fancybox-nav
  position absolute
  top 0
  width 40%
  height 100%
  cursor pointer
  text-decoration none
  background transparent versionPath('/admin/images/content/fancybox/fancybox-blank.gif') /* helps IE */
  -webkit-tap-highlight-color rgba(0,0,0,0)
  z-index 8040

  span
    position absolute
    top 50%
    width 36px
    height 34px
    margin-top -18px
    cursor pointer
    z-index 8040
    background-color #fff
    visibility hidden

  &:hover span
    visibility visible

.fancybox-prev
  left 0
  span
    left -2px
    background-position -18px 8px
    border-radius 0 2px 2px 0
    &:hover
      background-position -18px -20px

.fancybox-next
  right 0
  span
    right -2px
    background-position -41px 8px
    border-radius 2px 0 0 2px
    &:hover
      background-position -41px -20px

.fancybox-tmp
  position absolute
  top -99999px
  left -99999px
  visibility hidden
  max-width 99999px
  max-height 99999px
  overflow visible !important

/* Overlay helper */

.fancybox-lock
  overflow hidden

.fancybox-overlay
  position absolute
  top 0
  left 0
  overflow hidden
  display none
  z-index 8010
  background versionPath('/admin/images/content/fancybox/fancybox-overlay.png')

.fancybox-overlay-fixed
  position fixed
  bottom 0
  right 0

.fancybox-lock .fancybox-overlay
  overflow auto
  overflow-y scroll

