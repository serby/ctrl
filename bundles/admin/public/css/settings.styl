//
// SETTINGS
// ========
// Project specific setings which can be changed to modify the basic look and
// feel of the project with little effort.
//


//
// ENABLE DEBUG STYLING
// Options are
// * error: Only critical bugs are shown
// * warning: Show error and warning bugs
// * all: Show error and warning bugs, as well as general tips / minor bugs
//

$debugMode = false
$debugLevel = 'all'


//
// LAYOUT
//

$baseMarginBottom = 1.5em


//
// TYPOGRAPHY
//

$headingFontFamily = Montserrat, 'Arial Black', Arial, sans-serif

$baseFontFamily = 'Lato', 'Lucida Sans', 'Lucida Grande', 'Lucida Sans Unicode', Arial, sans-serif
$baseFontSize = 90%
$baseLineHeight = 1.6
$baseFontColor = #222


//
// COLOURS
//

// Brand Colours
$colorPrimary = #30678f

// Base Button / Notification Colours
$colorBase = #bbb
$colorBorder = #ccc

// Notification Colours
$colorSuccess = #47a967
$colorNotice = #4791a9
$colorWarning = #dc7f2a
$colorError = #ca4427


//
// FORM SPECIFIC
//

$textInputPadding = 5px
$inputBackgroundColor = #FFFFFF // Remove?


//
// GLOBAL VISUAL ELEMENTS
//

$baseBorderRadius = 0 // Set to 0 to disable
$baseBoxShadow = 0px 1px 4px rgba(69, 85, 93, 0.4) // Set to none to disable


//
// ANIMATIONS AND TRANSITIONS
//

$baseTransitionDuration = 0.2s // Set to 0s to disable transitions // Remove?
$baseTransitionEasing = ease // Remove?


//
// MIXINS
// ======
//

//
// BUTTON STYLE
//

buttonStyle(color)
  color #fff
  background-color #222
  font-weight bold
  background-color color
  border 1px solid rgba(0,0,0,.1)
  box-shadow 0 1px 1px rgba(#fff, 0.3) inset, 0 1px 3px rgba(#000, 0.1)
  text-shadow 0 -1px 0 rgba(0,0,0,.2)
  border-radius 2px
