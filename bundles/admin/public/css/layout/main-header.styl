//
// MAIN HEADER
// ===========
// The main header makes up the bulk of the sidebar
//

.main-header
  position absolute
  width 240px
  top 0
  left 0
  bottom 0
  background-color #efefef
  border-right 1px solid #ddd
  z-index 1 // Position above .main-content when horizontal scrolling kicks in

  // Fixed positioning is JavaScript is enabled
  .js &
    position fixed

  // Inner shadow effect between sidebar and content
  &:after
    content ""
    position absolute
    top 0
    right 0
    display block
    height 100%
    width 10px
    pointer-events none
    background-linear-gradient(left, rgba(0,0,0,0), 0%, rgba(0,0,0,0.025), 100%)

  .site-logo
    margin 30px
    a
      display inline-block