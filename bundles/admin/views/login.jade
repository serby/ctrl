extend login-layout

block content

  include mixins/form-elements/index

  h1 Admin Login
  form(method='post')
    p You must login to access this part of the site
    fieldset
      -if (error)
        p.error
          strong= error
      -if (changed)
        p
          strong A verification email has been sent to #{changed}
      mixin textField({ name :'emailAddress' }, { label: 'Email Address' })
      mixin passwordField({ name :'password' }, { label: 'Password' })
      .form-row
        label.checkbox
          input(name='rememberMe', type='checkbox')
          span Remember me
    fieldset.actions
      a.password-reset(href="/admin/request-password-change") I have forgotten my password
      input.button.primary(type='submit', value='Login')