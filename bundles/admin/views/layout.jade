html(lang='en')
	//<![endif]
	head
		block head
			meta(charset='utf-8')
			meta(name='description', content=properties.description)
			meta(name='keywords', content=properties.keywords)
			//- SITE INFORMATION
			title=page.title + ' - ' + properties.name

		script
			document.getElementsByTagName('html')[0].setAttribute('class', 'js');

		block styles
			link(rel='stylesheet', type='text/css', href='/css/admin/v#{properties.version}/index.css', media='all')
			link(rel='stylesheet', type='text/css', href='/js/fancybox/jquery.fancybox.css', media='all')

	body(class=page.section)
		#page
			block header
				include includes/structure/header

			block content
				#main-content
					!= body

			block footer
				include includes/structure/footer

		block script
			script(src='//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js')
			script
				if (typeof jQuery === 'undefined') {
					document.write('<script src="/js/jquery-1.7.min.js" />');
				}
			script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js')
			script
				if (typeof jQuery.ui === 'undefined') {
					document.write('<script src="/js/jquery-ui-1.8.14.min.js" />');
				}

			script(src='/js/chosen/v#{properties.version}/chosen.jquery.js')
			script(src='/js/fancybox/jquery.fancybox.pack.js')
			script(src='/js/admin/control.js')