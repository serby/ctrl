  |   confirm: function () {},
  | 
  |   // The function to execute if the user presses the deny button
  |   deny: function () {},
  | 
  |   // The text to display in the confirm button. Optional, default is `Confirm`
  |   confirmVerb: 'Confirm',
  | 
  |   // The text to display in the confirm button. Optional, default is `Confirm`
  |   denyVerb: 'Cancel',
  | 
  |   // If `true`, the button uses the `$errorColour` (which is probably red).
  |   // Optional, and the default is `false`, in which case it uses `$primaryColour`
